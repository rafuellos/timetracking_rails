<% if @errors.any? %>
	<ul>
		<% @errors.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end %>	
	</ul>
<% end %>	


<%= form_for [@project, @entry] do |f|%>
	<%= f.label :hours %>
	<%= f.text_field :hours %>	
	<br>
	<br>

	<%= f.label :minutes %>
	<%= f.text_field :minutes %>	
	<br>
	<br>

	<%= f.label :date %>
	<%= f.date_field :date %>	
	<br>
	<br>

	<%= f.label :comments %>
	<%= f.text_field :comments %>	
	<br>
	<br>
	<%= f.submit "Create entry" %>

<% end %>
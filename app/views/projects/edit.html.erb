<% if @project.errors.full_messages.any? %>
	<ul>
		<% @project.errors.full_messages.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end %>	
	</ul>
<% end %>



<%= form_for @project do |f|%>
	<%= f.label :name %>
	<%= f.text_field :name %>	
	
	<%= f.label :description %>
	<%= f.text_field :description %>	
	<br>
	<br>

	<%= f.submit "Edit project" %>

<% end %>


<%= link_to 'Cancel', projects_path %>